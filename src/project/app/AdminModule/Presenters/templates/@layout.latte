<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Ansonika">

    <title>{ifset title}{include title|stripHtml} | {/ifset}Project administration</title>

    <link rel="shortcut icon" href="{$basePath}/assets/admin/img/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" type="image/x-icon"
          href="{$basePath}/assets/admin/img/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72"
          href="{$basePath}/assets/admin/img/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114"
          href="{$basePath}/assets/admin/img/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144"
          href="{$basePath}/assets/admin/img/apple-touch-icon-144x144-precomposed.png">

    <!-- Bootstrap core CSS-->
    <link href="{$basePath}/assets/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Main styles -->
    <link href="{$basePath}/assets/admin/css/admin.css" rel="stylesheet">
    <!-- Icon fonts-->
    <link href="{$basePath}/assets/admin/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <!-- Plugin styles -->
    <link href="{$basePath}/assets/admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">
    <!-- Your custom styles -->
    <link href="{$basePath}/assets/admin/css/custom.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/css/select2.min.css" rel="stylesheet"/>
    <link href="{$basePath}/css/select2-bootstrap4.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="{$basePath}/css/flatpickr.min.css">

    {block head}{/block}
</head>

<body class="fixed-nav sticky-footer" id="page-top">
{control mainNavigation}
<div class="content-wrapper">
    <div class="container-fluid">
        <div n:foreach="$flashes as $flash" n:class="alert, 'alert-' . $flash->type">{$flash->message}</div>
        {include content}
    </div>
</div>
<footer class="sticky-footer">
    <div class="container">
        <div class="text-center">
            <small>Copyright © SPARKER 2019</small>
        </div>
    </div>
</footer>
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fa fa-angle-up"></i>
</a>
<!-- Logout Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" n:href="Sign:out">Logout</a>
            </div>
        </div>
    </div>
</div>

{block scripts}
    <script src="{$basePath}/assets/admin/vendor/jquery/jquery.min.js"></script>
    <script src="{$basePath}/assets/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="{$basePath}/assets/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="{$basePath}/js/select2.min.js"></script>
    <!-- Page level plugin JavaScript-->
    <script src="{$basePath}/assets/admin/vendor/chart.js/Chart.min.js"></script>
    <script src="{$basePath}/assets/admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="{$basePath}/assets/admin/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="{$basePath}/assets/admin/vendor/jquery.selectbox-0.2.js"></script>
    <script src="{$basePath}/assets/admin/vendor/retina-replace.min.js"></script>
    <script src="{$basePath}/assets/admin/vendor/jquery.magnific-popup.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <!-- Custom scripts for all pages-->
    <script src="{$basePath}/assets/admin/js/admin.js"></script>
    <!-- Custom scripts for this page-->
    <script src="{$basePath}/assets/admin/js/admin-datatables.js"></script>

{/block}
</body>
</html>
